
@{
    ViewBag.Title = "AlunoBusca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    @*<div class="card-header"><i class="fa fa-child"></i> Cadastro de Aluno</div>*@
    <div class="container">
        <!-- Example DataTables Card-->
        <div class="card mb-3">
            <div class="card-header"><i class="fa fa-child"></i> Alunos Cadastrados</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Aluno</th>
                                <th>Nascimento</th>
                                <th>Responsável</th>
                                <th>Turma</th>
                                <th><i class="fa fa-fw fa-edit"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            @Html.Raw(ViewBag.ListaAlunos)
                        </tbody>
                    </table>
                </div>
            </div>
            @*<div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>*@
        </div>
    </div>
</div> 