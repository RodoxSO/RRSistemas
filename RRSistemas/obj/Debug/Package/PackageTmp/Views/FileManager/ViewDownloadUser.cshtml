
@{
    ViewBag.Title = "ViewDownloadUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="card-header"><i class="fa fa-download"></i> Download de arquivos</div>
    <br />
    <div class="container">
        <div class="card mb-3">
            @*<div class="card-header"><i class="fa fa-child"></i> Usuários com arquivos disponíveis para download</div>*@
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Arquivo</th>
                                <th>Extenção</th>
                                <th>Tamanho</th>
                                <th>Data</th>
                                <th><i class="fa fa-fw fa-download" data-toggle="tooltip" data-placement="top" title="Download"></i></th>
                                <th><i class="fa fa-fw fa-trash" data-toggle="tooltip" data-placement="top" title="Delete"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            @Html.Raw(ViewBag.ListFilesUser)
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 

