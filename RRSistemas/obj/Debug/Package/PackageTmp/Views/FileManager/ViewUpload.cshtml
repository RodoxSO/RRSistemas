@model RRSistemas.Entity.UploadDownloadENT
@{
    ViewBag.Title = "ViewUpload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ViewUpload", "FileManager", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="content-wrapper">
        <div class="card-header"><i class="fa fa-upload"></i> Upload de arquivos</div>
        <br />
        <div class="container">
            <div class="form-group row">
                @Html.Raw(ViewBag.Message)
            </div>
            <div class="form-group row">
                @Html.Label("nm_file", "Arquivo", new { @class = "col-sm-2 col-form-label" })
                <div class="col-md-3">
                    @Html.TextBox("file", "", new { type = "file" })
                    @*<input type="file" name="nm_file">*@
                    @*Html.TextBoxFor(model => model.nm_file, new { @class = "form-control", placeholder = "Arquivo", autofocus = false, required = "required" })*@
                    @Html.ValidationMessageFor(model => model.nm_file)
                </div>
            </div>
            <div class="text-left">
                @Html.HiddenFor(model => model.id_usuario)
                @*<input type="button" class="btn btn-primary" value="Voltar" onclick="javascript: window.history.go(-1)" />*@
                <input type="submit" value="Enviar" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<br />
<div class="content-wrapper">
    <div class="container">
        <div class="card mb-3">
            @*<div class="card-header"><i class="fa fa-child"></i> Usuários com arquivos disponíveis para download</div>*@
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Arquivo</th>
                                <th>Extenção</th>
                                <th>Tamanho</th>
                                <th>Data</th>
                                <th><i class="fa fa-fw fa-download" data-toggle="tooltip" data-placement="top" title="Download"></i></th>
                                <th><i class="fa fa-fw fa-trash" data-toggle="tooltip" data-placement="top" title="Delete"></i></th>

                            </tr>
                        </thead>
                        <tbody>
                            @Html.Raw(ViewBag.ListFilesUser)
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 