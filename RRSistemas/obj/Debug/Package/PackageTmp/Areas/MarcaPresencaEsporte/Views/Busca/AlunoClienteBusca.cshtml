
@{
    ViewBag.Title = "AlunoClienteBusca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <div class="card-header"><i class="fa fa-child"></i> Cadastro de Alunos por cliente</div>
    <br />
    <div class="form-group text-left">
        <button name="btn_voltar" class="btn btn-outline-primary" onclick="javascript: window.history.go(-1)"><i class="fas fa-reply"></i> Voltar</button>
        @{
            <a href="@Url.Action("AlunoCadastro", "Cadastro")" class="btn btn-outline-warning"><i class="fas fa-user-plus"></i> Adicionar Aluno</a>
        }
    </div>


    <div class="container">
        <!-- Example DataTables Card-->
        <div class="card mb-3">
            <div class="card-header"><i class="fa fa-table"></i> Alunos Cadastrados</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        @*<table class="table table-bordered table-hover" id="dataTableAlunos" width="100%" cellspacing="0">*@
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Nome</th>
                                <th>Nascimento</th>
                                <th>Sexo</th>
                                <th>Turma</th>
                                <th><i class="fa fa-fw fa-edit"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            @Html.Raw(ViewBag.ListarAlunosCliente)
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        @*<div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>*@
    </div>
</div>
</div>