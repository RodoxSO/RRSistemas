
@{
    ViewBag.Title = "ClienteBusca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <div class="card-header"><i class="fa fa-user"></i> Cadastro de Cliente</div>
    <br />
    <div class="container-fluid">
        <div class="form-row">
            <div class="col-md-2">
                @Html.ActionLink("Novo Cliente", "ClienteCadastro", "Cadastro", new { area = "MarcaPresencaEsporte" }, new { @class = "btn btn-outline-primary" })
            </div>
        </div>
        <br />
        <div id="DivDataTables" runat="server" style="display: block;">
            <!-- Example DataTables Card-->
            <div class="card mb-3">
                <div class="card-header"><i class="fa fa-user"></i> Clientes Cadastrados</div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                            <thead class="thead-dark">
                                <tr>
                                    <th>#</th>
                                    <th>Nome</th>
                                    <th>Cód. Usuário</th>
                                    <th>RG</th>
                                    <th>CPF</th>
                                    <th>Status</th>
                                    <th>Editar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @Html.Raw(ViewBag.ListarClientes)
                            </tbody>
                        </table>
                    </div>
                </div>
                <!--<div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>-->
            </div>
        </div>
    </div>
</div>




