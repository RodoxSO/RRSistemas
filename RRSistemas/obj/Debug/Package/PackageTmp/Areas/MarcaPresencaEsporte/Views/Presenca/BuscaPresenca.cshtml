
@{
    ViewBag.Title = "BuscaPresenca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Areas/MarcaPresencaEsporte/Content/css/DetailDiaSemana.css" rel="stylesheet" />
<div class="content-wrapper">
    @*<div class="card-header"><i class="fa fa-users"></i> Aulas</div>
        <br />*@
    <div class="container">
        <!-- Example DataTables Card-->
        <div class="card mb-3">
            <div class="card-header"><i class="fa fa-paste"></i> Listas de Presença</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr>
                                <th>Turma</th>
                                <th>Data</th>
                                <th>Horário</th>
                                <th>Dia da Semana</th>
                                @Html.Raw("<th align = \"center\" ><i class=\"fa fa-paste\"></i></th>")
                            </tr>
                        </thead>
                        <tbody>
                            @Html.Raw(ViewBag.BuscaPresenca)
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>