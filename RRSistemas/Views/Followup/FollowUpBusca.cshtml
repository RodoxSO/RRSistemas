
@{
    ViewBag.Title = "FollowUpBusca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <div class="card-header"><i class="fa fa-table"></i> Follow-up @ViewBag.fupName</div>
    <br />
    <div class="form-group text-left">
        <button name="btn_voltar" class="btn btn-outline-primary" onclick="javascript: window.history.go(-1)"><i class="fas fa-reply"></i> Voltar</button>
        @{
            <a href="@Url.Action("FollowupCadastro", "Followup", new { id_followup_categoria= @ViewBag.id_followup_categoria, id_parametro = @ViewBag.id_parametro })" class="btn btn-outline-warning"><i class="fas fa-table"></i> Adicionar Follow-up</a>
        }
    </div>
    <div class="container">
        <!-- Example DataTables Card-->
        <div class="card mb-3">
            <div class="card-header"><i class="fa fa-table"></i> Folow-up @ViewBag.fupName</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr class="">
                                <th class="z-1">#</th>
                                <th class="w-auto">Data</th>
                                <th class="w-auto">Histórico</th>
                            </tr>
                        </thead>
                        <tbody>
                            @Html.Raw(ViewBag.ListaFollowup)
                        </tbody>
                    </table>
                </div>
            </div>
            @*<div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>*@
        </div>
    </div>
</div> 